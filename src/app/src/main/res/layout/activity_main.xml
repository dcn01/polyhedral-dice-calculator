<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark_grey"
    android:id="@+id/container"
    >

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RPG Dice Calculator"

        android:textColor="#aaa"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
    />

    <View
        android:id="@+id/lcd"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        app:layout_constraintTop_toBottomOf="@id/app_name"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/lcd"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2d4+1d6"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/lcd"
        app:layout_constraintTop_toTopOf="@id/lcd"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text=">> 42"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/lcd"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"


        app:layout_constraintBottom_toBottomOf="@id/lcd"
        />

    <Button
        android:id="@+id/button_7"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/lcd"
        app:layout_constraintBottom_toTopOf="@id/button_4"

        />

    <Button
        android:id="@+id/button_8"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="8"
        app:layout_constraintTop_toTopOf="@+id/button_7"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_9"
        />

    <Button
        android:id="@+id/button_9"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toTopOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_clear"
        />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        style="@style/CommandButton"
        android:text="clr"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_7"
        />

    <Button
        android:id="@+id/button_4"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_5"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        android:layout_marginTop="@dimen/button_vspacing"
        />

    <Button
        android:id="@+id/button_5"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toTopOf="@+id/button_4"
        />

    <Button
        android:id="@+id/button_6"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintTop_toTopOf="@+id/button_4"
        />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintTop_toTopOf="@id/button_4"
        style="@style/OperatorButton"
        />

    <Button
        android:id="@+id/button_1"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        android:layout_marginTop="@dimen/button_vspacing"
        app:layout_constraintBottom_toTopOf="@id/button_d"
        />

    <Button
        android:id="@+id/button_2"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintTop_toTopOf="@+id/button_1"
        />

    <Button
        android:id="@+id/button_3"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="3"

        app:layout_constraintEnd_toStartOf="@id/button_plus"
        app:layout_constraintTop_toTopOf="@+id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_2"
        />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="+"
        style="@style/OperatorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintTop_toTopOf="@id/button_1"
        />

    <Button
        android:id="@+id/button_d"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="d"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="@id/button_1"
        android:layout_marginTop="@dimen/button_vspacing"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/DieButton"
        />

    <Button
        android:id="@+id/button_0"
        android:layout_width="@dimen/calculator_button_width"
        android:layout_height="@dimen/button_height"
        android:text="0"

        app:layout_constraintTop_toTopOf="@id/button_d"
        app:layout_constraintEnd_toEndOf="@id/button_2"
        />

    <Button
        android:id="@+id/button_roll"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="roll"
        style="@style/RollButton"
        app:layout_constraintTop_toTopOf="@id/button_d"
        app:layout_constraintStart_toStartOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="@id/button_plus"
        />

</android.support.constraint.ConstraintLayout>
