<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/CalculatorButton</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
    </style>

    <style name="actionbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CalculatorButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="DieButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/ocher</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommandButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="RollButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/turquoise</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="AppTheme.LCD">
        <!--<item name="android:fontFamily">@font/mode7</item>-->
        <item name="android:textColor">#000000</item>
        <!--<item name="android:shadowColor">#80000000</item>-->
        <!--<item name="android:shadowDx">2</item>-->
        <!--<item name="android:shadowDy">2</item>-->
        <!--<item name="android:shadowRadius">2.5</item>-->
    </style>
</resources>
