<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/CalculatorButton</item>

    </style>

    <style name="actionbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CalculatorButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:minHeight">32sp</item>
        <item name="android:minWidth">72sp</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="DieButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/ocher</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommandButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RollButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/turquoise</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
